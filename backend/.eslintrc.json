{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": "standard",
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		// "newline-per-chained-call": 1,
		"no-var": "error",
		"curly": "off",
		"camelcase": "off",
		"space-before-function-paren": "off",
		"indent": "off",
		"new-cap": "off",
		"strict": ["error", "global"],
		"quotes": ["error", "single"],
		"semi": ["error", "never"],
		"no-tabs": ["off", "always"],
		"comma-dangle": ["error", "never"],
		"complexity": ["warn", 10],
		"no-param-reassign": [
			"error",
			{
				"props": false
			}
		],
		"no-use-before-define": [
			"error",
			{
				"functions": false,
				"variables": false
			}
		],
		"no-console": [
			"error",
			{
				"allow": ["time", "timeEnd"]
			}
		],
		"brace-style": [
			"error",
			"1tbs",
			{
				"allowSingleLine": true
			}
		],
		"max-len": [
			"error",
			{
				"code": 85,
				"ignoreComments": true,
				"ignoreTrailingComments": true,
				"ignoreUrls": true,
				"ignoreStrings": true,
				"ignoreTemplateLiterals": true,
				"ignorePattern": "^\\s*var\\s.+=\\s*require\\s*\\("
			}
		]
	}
}
